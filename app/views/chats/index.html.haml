                    .memo-m
                      %p.mmm
                        = image_tag c.image.url, class: 'lower-message__image',height: "200px", width: "px" if c.image.present?
                        = c.content
            - else
              .memo-message-crian
                .message-memo
                  %p.memesage
                  - if c.user.image.url nil?
                    = link_to user_path(c.user.id) do
                      .uuuu-aa
                        .upper-message__date-cre
                          = c.created_at.strftime("%Y年%m月%d日 %H時%M分")
                        .memo-m
                          %p.mmm
                            = c.content
                            = image_tag c.image.url, class: 'lower-message__image',height: "200px", width: "px" if c.image.present?
                    .memo-rock
                      .memo-image
                        =image_tag c.user.image.url,class:"message-user", height: "60px", width: "60px"
                      .upper-message__user-name
                        = c.user.nickname
                  - else
                    = link_to user_path(c.user.id) do
                      .uuuu-aa
                        .upper-message__date-cre
                          = c.created_at.strftime("%Y年%m月%d日 %H時%M分")
