        .memo-line
          -# .chats{"data-message-id": "#{message.id}"}
          - @chats.each do |c|
            - if c.user == current_user
              .memo-message
                %p.memesage
                - if c.user.image.url nil?
                  = link_to user_path(c.user.id) do
                    .memo-rock
                      .memo-image
                        =image_tag c.user.image.url,class:"message-user", height: "60px", width: "60px"
                      .upper-message__user-name
                        = c.user.nickname
                  .uuuu-aa
                    .upper-message__date
                      = c.created_at.strftime("%Y/%m/%d %H:%M")
                    .memo-m
                      %p.mmm
                        = image_tag c.image.url, class: 'lower-message__image',height: "200px", width: "px" if c.image.url.present?
                        = c.content
                - else 
                  = link_to user_path(c.user.id) do
                    .memo-rock
                      .memo-image
                        =image_tag("/images/dummyface.png",class:"message-user", height: "60px", width: "60px")
                      .upper-message__user-name
                        = c.user.nickname
                  .uuuu-aa
                    .upper-message__date
