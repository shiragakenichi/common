.conteiner
  = render partial: "sheard/header"
  .main-block
    .profile-main
      .profile-side
        .profile-image-box
          - if @user.image.url nil?
            = image_tag @user.image.url ,class:"image-user-face",height:"80px", width:"80px"
          - else
            = image_tag("/images/dummyface.png",class:"message-user", height: "80px", width: "80px")
        .profile-relative-box
          %ul.profile-relati
            %li.profile-nickname
              = @user.nickname
          %ul.profile-relati
            %li.profile-count
              フォロワー
            %li.profile-followers
              = @user.followers.count
          %ul.profile-relati
            %li.profile-count
              フォロー
            %li.profile-followers
              = @user.followings.count
          %ul.profile-relati
            %li.profile-count
              友達
            %li.profile-followers
              = @user.matchers.count
      .profile-text
        .profile-xam
          %p.profile-xam__are
            = @profile.introduction
        .profile-web-site
          %p
            http:instagram.jp
        .profile-jend
          %p
            男
        .profile-pre
          %p
            = @profile.prefectures
        .profile-age
          %p
            =  @age
      .profile-edit-btn
        - if @user.id == current_user.id
          = link_to edit_user_path do
            編集する
        - else
          - if current_user.following?(user)
            = render 'users/unfollow', user: user
          - else
            = render 'users/follow', user: user
         



          

    