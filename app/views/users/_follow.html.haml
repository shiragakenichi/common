= form_for(current_user.following_relationships.build(following_id: user.id), |
  remote: true) do |f|                                                        |
  %div= f.hidden_field :following_id
  - if user.following?(current_user)
    = f.submit "友達になる", class: "btn btn-large btn-primary"
  - else
    = f.submit "友達申請する", class: "btn btn-large btn-primary"