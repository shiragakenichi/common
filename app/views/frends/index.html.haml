  = render partial: "sheard/header"
  .main
    .users-contents
      - @frends.each do |frend|
        .user-blocks
          .user-blocks__image
            - if frend.image.url nil?
              = image_tag frend.image.url ,class:"image-user-face",height:"80px", width:"80px"
            - else
              = image_tag("/images/dummyface.png",class:"message-user", height: "80px", width: "80px")
            .user-name
              = link_to user_path(frend.id) do
                = frend.nickname
            %ul.follow-count
              %li.count-follow
                友達になった日
              %li.follow
                = frend.followers.count
            %ul.follower-cont
              %li.follower
